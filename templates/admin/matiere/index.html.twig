{% extends 'admin/base.html.twig' %} 
{% import "macros/dataTable.html.twig" as dataTable %}
{% import "macros/links.html.twig" as links %}
{% import "macros/breadcrumb.html.twig" as breadcrumb %}
{% import "macros/alertes.html.twig" as alertes %}

{% block title %}
Matieres
{% endblock %} 

{% block head %}
{{ dataTable.css() }} 
{% endblock %}

{% block foot %} 
{{ dataTable.js() }}
{% endblock %}

{% block javascripts %}
{{ dataTable.script('#table-1') }} 
{% endblock %}
{% block breadcrumb %}
    {{ breadcrumb.breadcrumb('Mati√®res')}}
{% endblock %}
{% block body %}

{% for item in app.flashes('success') %}    
    {{ alertes.alert(item,'success')}}
{% endfor %}
<div class="card card-outline card-primary">
    <div class="card-header">
        <h3>Matieres</h3>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col">
                {{ links.new(path('admin_matiere_new'))}}
            </div>
        </div>
        <table class="table" id="table-1">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Designation</th>
                    <th>Created at</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% set i = 0 %}
                {% for matiere in matieres %}
                <tr>
                    <td>{{ matiere.code }}</td>
                    <td>{{ matiere.designation }}</td>
                    <td>{{ matiere.createdAt ? matiere.createdAt|date_format_fr : '' }}</td>
                    <td>
                        <div class="btn-group">
                        {{ links.show(path('admin_matiere_show', {'id': matiere.id})) }}
                        {{ links.edit(path('admin_matiere_edit', {'id': matiere.id})) }}
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div> 
{% endblock %}