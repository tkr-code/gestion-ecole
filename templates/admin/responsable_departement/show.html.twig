{% extends 'admin/base.html.twig' %}
{% import "macros/links.html.twig" as links %}

{% block title %}
    ResponsableDepartement
        
    
{% endblock %}

{% block body %}
    <div class="card card-outline card-lightblue">
        <div class="card-header">
            <h3>
                ResponsableDepartement            
            </h3>
        </div>
        <div class="card-body">
            <table class="table">
                <tbody>
                    <tr>
                        <th>
                            Date_entre_fonction
                                                                                
                                                    
                        </th>
                        <td>
                            {{ responsable_departement.dateEntreFonction ? responsable_departement.dateEntreFonction|date_format_fr : '' }}
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Date_sortie_fonction
                                                                                
                                                    
                        </th>
                        <td>
                            {% if responsable_departement.dateSortieFonction | length != 0 %}
                                {{ responsable_departement.dateSortieFonction ? responsable_departement.dateSortieFonction|date_format_fr : '' }}
                            {% else %}
                                Toujours en Fonction
                                                            
                            {% endif %}

                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>

    <div class="btn-group">
        {{ links.back(path('admin_responsable_departement_index')) }}
        {{ links.edit(path('admin_responsable_departement_edit', {'id': responsable_departement.id})) }}
    </div>
{% endblock %}
