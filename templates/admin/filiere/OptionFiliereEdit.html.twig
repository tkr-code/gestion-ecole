{% extends "admin/base.html.twig" %}
{% import "macros/button.html.twig" as buttons %}
{% import "macros/link.html.twig" as links %}
{% block title %}
    Filiere
    
{% endblock %}
{% block body %}
    <div class="card card-outline card-success">
        <div class="card-header">
            <h3>
                Modification Option filiere pour la filiere : 
                                
                {{ filiere.designation }}
            </h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_row(form.code) }}
            {{ form_row(form.designation) }}
            <div class="btn-group">
                {{ links.back(path('admin_filiere_edit',{'id':filiere.id})) }}
                {{ buttons.edit() }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}