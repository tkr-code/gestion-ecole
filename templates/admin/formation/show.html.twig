{% extends 'admin/base.html.twig' %}
{% import "macros/dataTable.html.twig" as dataTable %}
{% import "macros/link.html.twig" as links %}

{% block head %}
	{{dataTable.css()}}
{% endblock %}
{% block foot %}
	{{dataTable.js()}}
{% endblock %}
{% block javascripts %}
	{{dataTable.script('#table-1')}}
{% endblock %}

{% block title %}Formation
{% endblock %}

{% block body %}
	<div class="card card-outline card-lightblue">
		<div class="card-header">
			<h3>Formation</h3>
		</div>
		<div class="card-body">
			<table class="table" id="table-1">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ formation.id }}</td>
					</tr>
					<tr>
						<th>Designation</th>
						<td>{{ formation.designation }}</td>
					</tr>
					<tr>
						<th>Cout</th>
						<td>{{ formation.cout }}</td>
					</tr>
					<tr>
						<th>Créer le</th>
						<td>{{ formation.createdAt ? formation.createdAt|date_format_fr : '' }}
							à
							{{formation.createdAt ? formation.createdAt | date('H:i:s') : ''}}</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	{#	<a href="{{ path('admin_formation_index') }}">back to list</a>
		#}
	{{links.back(path('admin_formation_index'))}}
	<a href="{{ path('admin_formation_edit', {'id': formation.id}) }}" class="btn btn-success">
		<i class="fas fa-edit"></i>&nbsp;edit</a>

	{{ include('admin/formation/_delete_form.html.twig') }}
{% endblock %}
