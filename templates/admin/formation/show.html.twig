{% extends 'admin/base.html.twig' %}
{% import "macros/links.html.twig" as links %}
{% import "macros/etats.html.twig" as etats %}
{% import "macros/breadcrumb.html.twig" as breadcrumb %}

{% block title %}Formation{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb.breadcrumb('New formation',[
        {
            name:'Manage formation',
            path:path('admin_formation_index')
        }
    ]) }}
{% endblock %}

{% block body %}
<div class="card card-outline card-success">
    <div class="card-body">
        <h1>Formation</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ formation.id }}</td>
                </tr>
                <tr>
                    <th>Designation</th>
                    <td>{{ formation.designation }}</td>
                </tr>
                <tr>
                    <th>Cout</th>
                    <td>{{ formation.cout }}</td>
                </tr>
                <tr>
                    <th>Créé le</th>
                    <td>{{ formation.createdAt ? formation.createdAt|date_format_fr|capitalize : '' }}</td>
                </tr>
                <tr>
                    <th>Etat</th>
                    <td>{{ etats.etat(formation.etat) }}</td>
                </tr>
            </tbody>
        </table>
        <div class="btn-group">
            {{ links.back(path('admin_formation_index')) }}
            {{ links.edit(path('admin_formation_edit', {'id': formation.id}), 'Update') }}
        </div>

    </div>
</div>
{% endblock %}