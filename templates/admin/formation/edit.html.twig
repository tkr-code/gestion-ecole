{% extends 'admin/base.html.twig' %}
{% import "macros/link.html.twig" as link %}
{% import "macros/button.html.twig" as button %}

{% block title %}Edit Formation
{% endblock %}

{% block body %}
	<div class="card">
		<div class="card-header">
			<h3>Edit Formation</h3>
		</div>
		<div class="card-body">
			{{form_start(form)}}
			{{form_row(form.designation)}}
			{{form_row(form.cout)}}
			{{button.edit()}}
			{{form_end(form)}}
		</div>
	</div>
	{{ link.back(path('admin_formation_index')) }}
	{{ include('admin/formation/_delete_form.html.twig') }}

{% endblock %}
